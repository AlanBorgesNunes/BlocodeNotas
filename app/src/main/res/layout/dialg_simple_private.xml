<?xml version="1.0" encoding="utf-8"?>





        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layout_toolbar_sigin"
            android:layout_width="match_parent"
            android:layout_height="180dp"
    android:layout_marginHorizontal="40dp"
    android:orientation="horizontal"
            android:background="@drawable/shape_button_migrate_card"

            >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/raiosBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:layout_marginHorizontal="22dp"
            android:orientation="horizontal">


            <RadioGroup
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_private"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privada"
                    android:textColor="#F2F3DE"
                    android:textColorLink="@color/purple_500" />

                <RadioButton
                    android:id="@+id/rb_simple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:text="Simples"
                    android:textColor="#F2F3DE" />

            </RadioGroup>

        </LinearLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/pt_sans_bold"
            android:text="Qual tipo de Anotação você deseja criar?"
            android:textColor="#F2F3DE"
            android:textSize="15sp" />

    </RelativeLayout>


        </RelativeLayout>
